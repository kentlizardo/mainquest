
{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "inputs": ["$TURBO_DEFAULT$", ".env*"],
        "outputs": ["dist/**"]
      },
      "check-types": {
        "dependsOn": ["^check-types"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "lint": {
        "dependsOn": ["^lint"],
        "inputs": ["{src,apps,libs,test}/**/*.ts", ".eslintrc*"],
        "outputs": [".eslintcache"]
      },
      "clean": {
        "cache": false
      }
    },
    "ui": "tui"
  }