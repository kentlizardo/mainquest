{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "yarn build",
    "watchPatterns": ["api/**"],
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "yarn"]
        },
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["yarn install"]
        }
      }
    }
  }
}
